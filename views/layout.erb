<!DOCTYPE html>
<html>
<head>
	<title>WEWIKI</title>
	<!-- Links to Public -->
	<link rel="stylesheet" type="text/css" href="../css/style.css">
	<script type="text/javascript" src="../js/main.js"></script>
	<!-- /Links to Public -->
</head>

<body>
	<!-- Header -->
	<div class="header">
		<!-- Home Button -->
		<a href="/"><p>Home</p></a>
		<!-- Brand Name -->
		<h1>WEKIWI</h1>
	</div>
	<!-- /Header -->

	<!-- Body -->
	<div class="body">
		<!-- Template -->
		<%= yield %>
		<!-- /Template -->
	</div>
	<!-- /Body -->	

	<!-- Footer -->
	<div class="footer">
		<!-- OPTION1: If User is Logged, Show: -->
		<% if session[:user_id] %>
			<% user = User.find(session[:user_id])%>
			<!-- Logged as, create article, my account -->
			<p>Logged as <%= user.name %> | <a href="/article/create">Create Article</a> | <a href="/users/articles/<%= session[:user_id] %>">Account</a></p>
			<!--/Logged as, create article, my account -->
			<form action="/sessions" method="POST">
  				<input type="hidden" name="_method" value="delete">
  				<button>Log Out</button>
			</form>
		<!-- OPTION2: If User NOT Logged, Show: -->
		<% else %>
			<p><a href="/login">Login</a> | <a href="/register">Sign Up</a></p>
		<% end %>
		<!--/OPTIONS -->
	</div>
	<!-- /Footer -->

</body>
</html>